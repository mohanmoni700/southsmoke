<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="slope_so_sdk_js" type="host">*.slope.so/slope.min.js</value>
                <value id="slope_so_checkout_iframe_js" type="host">*.slope.so</value>

            </values>
        </policy>
        <policy id="form-action">
            <values>
                <value id="slope_so_formaction" type="host">*.slope.so</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="slope_so_sdk_js_connect" type="host">*.slope.so/slope.min.js</value>
                <value id="slope_so_checkout_connect" type="host">*.slope.so</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="slope_so_api_connect" type="host">*.slope.so</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="slope_so_img" type="host">*.slope.so</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
